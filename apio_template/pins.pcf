####
# TinyFPGA BX information: https://github.com/tinyfpga/TinyFPGA-BX/
####

# Left side of board
set_io --warn-no-port io_pin_1 A2
set_io --warn-no-port io_pin_2 A1
set_io --warn-no-port io_pin_3 B1
set_io --warn-no-port io_pin_4 C2
set_io --warn-no-port io_pin_5 C1
set_io --warn-no-port io_pin_6 D2
set_io --warn-no-port io_pin_7 D1
set_io --warn-no-port io_pin_8 E2
set_io --warn-no-port io_pin_9 E1
set_io --warn-no-port io_pin_10 G2
set_io --warn-no-port io_pin_11 H1
set_io --warn-no-port io_pin_12 J1
set_io --warn-no-port io_pin_13 H2

# Right side of board
set_io --warn-no-port io_pin_14 H9
set_io --warn-no-port io_pin_15 D9
set_io --warn-no-port io_pin_16 D8
set_io --warn-no-port io_pin_17 C9
set_io --warn-no-port io_pin_18 A9
set_io --warn-no-port io_pin_19 B8
set_io --warn-no-port io_pin_20 A8
set_io --warn-no-port io_pin_21 B7
set_io --warn-no-port io_pin_22 A7
set_io --warn-no-port io_pin_23 B6
set_io --warn-no-port io_pin_24 A6

# SPI flash interface on bottom of board
set_io --warn-no-port SPI_SS F7
set_io --warn-no-port SPI_SCK G7
set_io --warn-no-port SPI_IO0 G6
set_io --warn-no-port SPI_IO1 H7
set_io --warn-no-port SPI_IO2 H4
set_io --warn-no-port SPI_IO3 J8

# General purpose pins on bottom of board
set_io --warn-no-port io_pin_25 G1
set_io --warn-no-port io_pin_26 J3
set_io --warn-no-port io_pin_27 J4
set_io --warn-no-port io_pin_28 G9
set_io --warn-no-port io_pin_29 J9
set_io --warn-no-port io_pin_30 E8
set_io --warn-no-port io_pin_31 J2

# LED
set_io --warn-no-port io_led B3

# USB
set_io --warn-no-port USBP B4
set_io --warn-no-port USBN A4
set_io --warn-no-port USBPU A3

# 16MHz clock
set_io --warn-no-port clock B2 # input
